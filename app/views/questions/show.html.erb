<%= @question.content %><br>

<% if @question.user_id == session[:user_id] %>
  <%= link_to "edit", edit_question_path(@question)%>
  <%= link_to "delete", question_path(@question), method: "delete" %><br>
<% end %>

<%= render '/votes/index' %> votes
